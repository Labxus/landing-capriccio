---

const {tituloChordion,parrafoChordion} = Astro.props

---

<div class="chordion w-72 min-h-[4rem] shadow-xl rounded-xl transition ease-in-out duration-300 p-5 md:w-[30rem]">
    <p class="text-2xl md:text-3xl">{tituloChordion}</p>
    <p id="info" class="hidden transition ease-in-out duration-300 md:text-xl">{parrafoChordion}</p>
</div>

