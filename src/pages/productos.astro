---

import Layout from "../layouts/layout.astro";
import SecCardInfo from "../components/sections/secCardInfo.astro";

import json from '../services/data/infoPage.json'

console.log(json.productos.infoCards);


---

<Layout title="Productos">
    <div class="w-full min-h-screen">

        <!-- start section productos -->
        <div class="w-full h-40 md:h-72 bg-primaryContrast grid place-content-center mb-10">
            <h2 class="font-bold text-5xl text-secondaryColor ">{json.productos.titleProductos.title}</h2>
        </div>
        <!-- end section productos -->

        <!-- start section cards   -->
        <div class="container mx-auto w-full h-auto">
            <h3 class="text-center text-7xl text-titleColor font-bold mb-20">{json.productos.producto}</h3>
            <SecCardInfo infoCard = {json.productos.infoCards}
            />
        </div>

        <!-- end section cards  -->


    </div>
</Layout>